<Window x:Class="KutyaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KutyaGUI"
        mc:Ignorable="d"
        Title="Kutyák adatbázisa" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="kiiras" Content="0 darab adat került betöltésre" HorizontalAlignment="Left" Margin="39,71,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="kutyanevek" HorizontalAlignment="Left" Margin="39,105,0,0" VerticalAlignment="Top" Width="246" SelectionChanged="kutyanevek_SelectionChanged"/>
        <Button x:Name="gomb" Content="Adatok betöltése" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" Height="32" Width="243" Click="gomb_Click"/>
        <Label x:Name="ads" Content="A kutya adatai:" HorizontalAlignment="Left" Margin="436,71,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="adatok" Margin="436,105,54,126"/>
        <Button x:Name="kilep" Content="Kilépés" HorizontalAlignment="Center" Margin="0,341,0,0" VerticalAlignment="Top" Height="34" Width="112" Click="kilep_Click_1"/>

    </Grid>
</Window>
